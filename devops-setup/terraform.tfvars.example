# Example terraform.tfvars for DevOps Infrastructure
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
region = "us-west-2"
environment = "production"
owner = "your-team-name"

# Network Configuration
devops_vpc_cidr = "10.100.0.0/16"
devops_public_subnet_cidr = "10.100.1.0/24"

# IMPORTANT: Replace with your actual IP address for SSH access
# You can find your IP at https://whatismyipaddress.com/
# Format: "YOUR_IP_ADDRESS/32" (e.g., "203.0.113.1/32")
admin_ip_cidr = "0.0.0.0/32"  # CHANGE THIS TO YOUR IP

# IMPORTANT: Replace with your AWS Key Pair name
# Create a key pair in AWS EC2 console first: EC2 > Key Pairs > Create Key Pair
key_pair_name = "your-key-pair-name"  # CHANGE THIS

# Instance Configuration
devops_instance_type = "t3.medium"
devops_instance_storage = 20

# Repository Configuration
git_repo_url = "https://github.com/uditmishra03/gogs.git"

# Optional: Create Elastic IP (recommended for production)
create_elastic_ip = true